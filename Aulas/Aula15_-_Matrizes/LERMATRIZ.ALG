Algoritmo "LerMatriz"

// Disciplina  : Algoritmos
// Professor   : Gustavo Guanabara
// Descrição   : Aula 15 – Matrizes
// Autor(a)    : Wady Jorge
// Ano         : 2024

Var

   // Variáveis
   mat: vetor[1..3, 1..2] de Inteiro
   l, c: Inteiro

Inicio

   Para l <- 1 ate 3 faca
      Para c <- 1 ate 2 faca
         Escreva("Digite o valor da posição [", l, ",", c, "]: ")
         Leia (mat[l,c])
      FimPara
   FimPara

   Para l <- 1 ate 3 faca
      Para c <- 1 ate 2 faca
         Escreva(mat[l,c]:5)
      FimPara
      Escreval()
   FimPara


Fimalgoritmo